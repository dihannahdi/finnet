{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "Jwt": {
    "Secret": "TradeFlowSuperSecretKey2024!@#$%^&*()_+",
    "Issuer": "TradeFlow",
    "Audience": "TradeFlow"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-auth": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/auth/{**catch-all}" }
        ]
      },
      "identity-users": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/users/{**catch-all}" }
        ]
      },
      "market-route": {
        "ClusterId": "market",
        "Match": {
          "Path": "/api/market/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/market/{**catch-all}" }
        ]
      },
      "market-hub": {
        "ClusterId": "market",
        "Match": {
          "Path": "/hubs/market/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/hubs/market/{**catch-all}" }
        ]
      },
      "portfolio-route": {
        "ClusterId": "portfolio",
        "Match": {
          "Path": "/api/portfolio/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/portfolio/{**catch-all}" }
        ]
      },
      "social-route": {
        "ClusterId": "social",
        "Match": {
          "Path": "/api/social/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/social/{**catch-all}" }
        ]
      },
      "social-hub": {
        "ClusterId": "social",
        "Match": {
          "Path": "/hubs/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/hubs/notifications/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "identity-svc": {
            "Address": "http://identity-api:80"
          }
        },
        "HttpClient": {
          "RequestHeaderEncoding": "utf-8"
        }
      },
      "market": {
        "Destinations": {
          "market-svc": {
            "Address": "http://market-api:80"
          }
        },
        "HttpClient": {
          "RequestHeaderEncoding": "utf-8"
        }
      },
      "portfolio": {
        "Destinations": {
          "portfolio-svc": {
            "Address": "http://portfolio-api:80"
          }
        },
        "HttpClient": {
          "RequestHeaderEncoding": "utf-8"
        }
      },
      "social": {
        "Destinations": {
          "social-svc": {
            "Address": "http://social-api:80"
          }
        },
        "HttpClient": {
          "RequestHeaderEncoding": "utf-8"
        }
      }
    }
  },
  "AllowedHosts": "*"
}
